# IMPORTANT: This is a pre-commit hook that runs before every commit.
# It's best to make sure everything here runs quickly to avoid slowing down development.
# Do no put any long-running commands or tests here.

# Pre-commit hook to prevent @runtimed/schema dependency from using file: protocol

# Get the list of files that are staged for commit
staged_files=$(git diff --cached --name-only)

# Check if package.json is in the staged files
if echo "$staged_files" | grep -q "package.json"; then
    echo "üîç Checking package.json for @runtimed/schema dependency..."

    # Get the staged version of package.json
    staged_package_json=$(git show :package.json 2>/dev/null)

    if [ $? -ne 0 ]; then
        echo "‚ö†Ô∏è  Warning: Could not read staged package.json, skipping validation"
        exit 0
    fi

    # Extract the @runtimed/schema dependency line
    runt_schema_line=$(echo "$staged_package_json" | grep -E '"@runtimed/schema"\s*:')

    if [ -n "$runt_schema_line" ]; then
        echo "üì¶ Found @runtimed/schema dependency: $runt_schema_line"

        # Check if it uses file: protocol
        if echo "$runt_schema_line" | grep -q '"file:'; then
            echo ""
            echo "‚ùå Error: @runtimed/schema dependency cannot use 'file:' protocol in package.json"
            echo "   This prevents proper deployment and distribution."
            echo "   Please use a proper version or GitHub URL instead."
            echo ""
            echo "   Current dependency:"
            echo "   $runt_schema_line"
            echo ""
            echo "   Allowed formats:"
            echo "   - \"@runtimed/schema\": \"^1.0.0\""
            echo "   - \"@runtimed/schema\": \"workspace:*\""
            echo "   - \"@runtimed/schema\": \"npm:@runtimed/schema@1.0.0\""
            echo ""
            echo "   To fix this, update the dependency in package.json and try committing again."
            exit 1
        else
            echo "‚úÖ @runtimed/schema dependency is properly configured (no file: protocol)"
        fi
    else
        echo "‚ÑπÔ∏è  No @runtimed/schema dependency found in package.json"
    fi
fi
